<% provide(:title, @user.name) %>
<div class="row">

  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="span8">

    <div id="myModal" class="modal hide fade">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h3>Add Horse</h3>
      </div>
      <div class="modal-body">
        <h4>Details</h4>

        <%= render 'shared/horse_form' %>

      </div>
      <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal" >Close</a>
        <a href="#" class="btn btn-primary">Save changes</a>
      </div>
    </div>

    


    <% if @user.horses.any? %>
      <h3>Horses (<%= @user.horses.count %>) <a data-toggle="modal" href="#myModal" class="btn btn-primary btn-large">Add Horse</a></h3>
      <ol class="horses">
        <%= render @horses %>
      </ol>
      <%= will_paginate @horses %>
    <% end %>

  </div>

</div>