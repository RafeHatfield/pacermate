<%= form_for @horse, :html => { :class => "form-horizontal", :id => "horse_form", :style => "padding-left:20px" } do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <fieldset>

    <div class="control-group">
      <%= f.label :stable_name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :stable_name, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :racing_name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :racing_name, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sex, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :sex, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :colour, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :colour, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :foal_date, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :foal_date, :class => "input-xlarge" %>
      </div>
    </div>

  </fieldset>

