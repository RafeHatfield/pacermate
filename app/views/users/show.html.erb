<% provide(:title, @user.name) %>
<div class="row">

  <div class="span8">

    <% if @user.horses.any? %>
      <h1 style="display:inline">
        My Stable (<%= @user.horses.count %>) 
      </h1>
      
      <a data-toggle="modal" href="#myModal" class="btn btn-primary btn-large" style="margin-bottom: 20px; float:right">Add Horse</a>
      
      <ol class="horses">
        <%= render @horses %>
      </ol>
      <%= will_paginate @horses %>
    <% end %>

  </div>

  <aside class="span4">
    <section>
      <h2>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h2>
    </section>
  </aside>

</div>

<div id="myModal" class="modal hide fade">

  <div class="modal-header">
    <button class="close" data-dismiss="modal">&times;</button>
    <h3>Add Horse</h3>
  </div>

  <div class="modal-body">

    <h4>Details</h4>

    <%= render 'shared/horse_form' %>

  </div>

  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>

</div>